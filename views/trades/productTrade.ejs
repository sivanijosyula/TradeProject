<%- include('../partials/header.ejs')%>
<div id="body">
  <h2>Your Trades</h2>
  <%if(items.length){%>
  <table>
    <tr>
      <th> Title</Title></th>
      <th>Category</th>
      <th>Status</th>
    </tr>
    <%items.forEach(item=>{%>
    <tr>
      <td>
        <a href="/trades/<%= item.id%>"> <span><%= item.title%></span> </a>
      </td>
      <td><%= item.category%></td>
      <td><%= item.status%></td>
      <%if(item.status==="Available"){%>
      <td>
        <form action="/trades/<%= item.id%>/tradeitem" method="get">
          <button type="submit">Trade Item</button>
        </form>
      </td>
      <%}%>
    </tr>
    <br />
    <%});%>
  </table>
  <br />
  <%}else{%>
  <p>You haven't created any trades yet.</p>
  <%};%>
</div>
<%- include('../partials/footer.ejs')%>